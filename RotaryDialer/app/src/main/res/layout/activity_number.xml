<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBrown"
    android:orientation="vertical"
    tools:context=".NumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/display"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/display_green"
            android:focusable="false"
            android:cursorVisible="false"
            android:fontFamily="@font/digital"
            android:gravity="end|center_vertical"
            android:longClickable="false"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/darkGreen"
            android:textSize="48dp" />

        <ImageView
            android:id="@+id/backspace"
            android:layout_width="70dp"
            android:layout_height="85dp"


            app:srcCompat="@drawable/backspace_gray" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/button_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_1" />

            <ImageView
                android:id="@+id/button_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_2" />

            <ImageView
                android:id="@+id/button_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/button_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_4" />

            <ImageView
                android:id="@+id/button_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_5" />

            <ImageView
                android:id="@+id/button_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/button_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_7" />

            <ImageView
                android:id="@+id/button_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_8" />

            <ImageView
                android:id="@+id/button_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/button_star"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_star" />

            <ImageView
                android:id="@+id/button_0_plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_0_plus" />

            <ImageView
                android:id="@+id/button_sharp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_sharp" />

        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/call_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/call_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/style_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rotary_gray" />

        <ImageView
            android:id="@+id/contacts_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/contact_button_gray" />

        <ImageView
            android:id="@+id/add_contact_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add_contact_button_gray" />

        <ImageView
            android:id="@+id/send_message_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/send_button_gray" />
    </LinearLayout>

</LinearLayout>