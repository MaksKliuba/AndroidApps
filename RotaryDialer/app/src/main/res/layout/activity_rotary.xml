<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBrown"
    android:orientation="vertical"
    tools:context=".RotaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/display"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/display_green"
            android:focusable="false"
            android:cursorVisible="false"
            android:fontFamily="@font/digital"
            android:gravity="end|center_vertical"
            android:longClickable="false"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/darkGreen"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/backspace"
            android:layout_width="70dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/backspace_gray" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1">

        <View
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:background="@drawable/numbers_dialer2" />

        <com.maks_kliuba.rotarydialer.RotaryDialerView
            android:id="@+id/rotary_dialer"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true" />

        <View
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:background="@drawable/top_dialer7"/>

        <ImageView
            android:id="@+id/call_button"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:background="@drawable/call_button_circle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/button_star"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_star" />

        <ImageView
            android:id="@+id/button_plus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_plus" />

        <ImageView
            android:id="@+id/button_sharp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_sharp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/style_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/numpad_gray" />

        <ImageView
            android:id="@+id/contacts_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/contact_button_gray" />

        <ImageView
            android:id="@+id/add_contact_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add_contact_button_gray" />

        <ImageView
            android:id="@+id/send_message_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/send_button_gray" />
    </LinearLayout>

</LinearLayout>